use strict;
use Test;
################################################################################
#
# Setup
#
################################################################################
BEGIN {
	plan test => 4
} use PML;
################################################################################
#
# Start
#
################################################################################
my ($parser, @code);

$_ = not eval {require Storable};
if ($_) {
	foreach (1..4) {
		skip(1, $_);
	}
	exit;
}

$parser = new PML;
@code = <DATA>;
$parser->parse(\@code); ok(1);
$parser = $parser->new;
ok($parser);
$parser->execute;
ok($parser->v('test') == 15);
$parser = $parser->new;
ok($parser->v('test') == 15);
################################################################################
#                              END-OF-SCRIPT                                   #
################################################################################
__END__
